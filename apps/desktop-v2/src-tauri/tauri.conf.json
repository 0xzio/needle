{
  "productName": "PenX",
  "version": "../package.json",
  "identifier": "com.penxio.penx",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:4040",
    "beforeDevCommand": "pnpm next-start",
    "beforeBuildCommand": "pnpm next-build"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "$schema": "../node_modules/@tauri-apps/cli/schema.json"
}
