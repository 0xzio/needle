{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm next-build",
    "beforeDevCommand": "pnpm next-start",
    "devPath": "http://localhost:4040",
    "distDir": "../out"
  },
  "package": {
    "productName": "PenX",
    "version": "0.3.11"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray32x32.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$App/*", "$HOME/*", "$DESKTOP/*"]
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "request": true
      },
      "window": {
        "show": true,
        "hide": true,
        "setFocus": true,
        "setSize": true,
        "setPosition": false,
        "setResizable": true,
        "center": true,
        "setSkipTaskbar": true,
        "startDragging": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/appIcons/*",
          "$RESOURCE/assets/*",
          "$RESOURCE/assets/*/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.penxio.penx",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "",
        "width": 750,
        "height": 470,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      },
      {
        "label": "editor",
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 1000,
        "height": 680,
        "alwaysOnTop": true,
        "decorations": true,
        "visible": false,
        "center": true,
        "url": "editor.html"
      },
      {
        "label": "dev_editor",
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 1000,
        "height": 680,
        "alwaysOnTop": true,
        "decorations": true,
        "visible": false,
        "center": true,
        "url": "http://localhost:4040/editor"
      }
    ],
    "macOSPrivateApi": true
  }
}
